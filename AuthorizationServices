          schema:
            $ref: '#/definitions/Error'
    


  
# Object definitions
# ----------------------------------------------------------------
definitions:

  Error:
    type: object
    properties:
      status:
        type: string
        title: error
      message:
        type: string

  User:
    type: object
    required:
    - fullName
    - email
    properties:
      id:
        type: string
        title: unique reference
        format: uuid
        example: d290f1ee-6c54-4b01-90e6-d701748f0851
      fullName:
        type: string
        title: full name
        format: string
        example: Vincent Van der Linden
      email:
        type: string
        title: valid email address
        format: email
        example: vincent.vanderlinden@invenso.com


  ApplicationPermission:
    type: object
    required:
      - applicationId
      - authKeyList
    properties:
      applicationId:
        type: string
        title: application id
      applicationName:
        type: string
        title: application name
      authKeyList:
        type: array
        items:
          $ref: "#/definitions/AuthKey"
  
  AuthKey:
    type: object
    required:
      - value
      - description
    properties:
      value:
        type: string
        title: key value
      description:
        type: string
        title: key description

  ApplicationToken:
    type: object
    properties:
      token:
        type: string
        title: jwt token generated
      expiredAt:
        type: number
        title: token expiration date

